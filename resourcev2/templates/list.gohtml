<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{.Title}}</title>
    <meta name="description" content="{{.Description}}">
    <meta name="keywords" content="{{.Keywords}}">
    <meta property="og:title" content="{{.Title}}">
    <meta property="og:description" content="{{.Description}}">
    <meta property="og:type" content="website">
    {{if .IsProduction}}
    <link rel="stylesheet" href="/assets/style.css">
    <script type="module" src="/assets/main.js"></script>
    {{else}}
    <script type="module" src="http://localhost:3001/@vite/client"></script>
    <script type="module" src="http://localhost:3001/src/main.js"></script>
    {{end}}
</head>
<body>
<div class="min-h-screen flex flex-col bg-base-200">
    <header class="sticky top-0 z-50">
        {{template "nav.gohtml" .}}
    </header>
    <main class="flex-1 container mx-auto px-4 py-4">
        <div class="flex flex-col md:flex-row gap-6">
            <section class="flex-1">
                <!-- 文章列表容器 -->
                <div class="card bg-base-100 shadow-xl">
                    <div class="card-body p-0">
                        <!-- 文章分类选择 -->
                        <div class="px-6 py-4 border-b border-base-200">
                            <div class="flex flex-wrap gap-2">
                                <button class="btn btn-sm btn-primary filter-tag active" data-filter="all"
                                        role="button">全部
                                </button>
                                {{range .ArticleCategoryList}}
                                <button class="btn btn-sm btn-outline filter-tag" data-filter="{{.Value}}"
                                        role="button">{{.Name}}</button>
                                {{end}}
                            </div>
                        </div>
                        <!-- 文章列表 -->
                        <ul class="list">
                            {{range .ArticleList}}
                            <li class="list-row hover:bg-base-200 flex items-center gap-3 ">
                                <!-- 左侧头像 -->
                                <a class="avatar" href="/user/{{.AuthorId}}">
                                    <div class="w-10 rounded-full">
                                        <img src="{{.AvatarUrl}}" alt="{{.Username}}"/>
                                    </div>
                                </a>
                                <!-- 右侧内容 -->
                                <div class="flex-1">
                                    <!-- 标题行 -->
                                    <div class="flex items-start gap-2 mb-1">
                                        <div class="badge badge-sm badge-primary flex-shrink-0">{{.TypeStr}}</div>
                                        <a href="/post/{{.Id}}"
                                           class="text-lg font-semibold text-base-content hover:text-primary hover:underline flex-1 min-w-0">{{.Title}}</a>
                                    </div>
                                    <!-- 用户信息行和统计信息合并为一行 -->
                                    <div class="flex items-center justify-between text-sm text-base-content/60">
                                        <div class="flex items-center flex-wrap">
                                            <a href="/user/{{.AuthorId}}" class="mr-3">{{.Username}}</a>
                                            <span class="mr-3">2025-05-23 09:30:17</span>
                                            {{range .Categories}}
                                            <span class="badge badge-sm badge-ghost mr-1">{{.}}</span>
                                            {{end}}
                                        </div>
                                        <div class="flex items-center">
                                            <div class="flex items-center mr-4">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1"
                                                     fill="none"
                                                     viewBox="0 0 24 24"
                                                     stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                          stroke-width="2"
                                                          d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                          stroke-width="2"
                                                          d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                                </svg>
                                                <span class="flex-shrink-0">{{.ViewCount}}</span>
                                            </div>
                                            <div class="flex items-center">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1"
                                                     fill="none"
                                                     viewBox="0 0 24 24"
                                                     stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                          stroke-width="2"
                                                          d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
                                                </svg>
                                                <span class="flex-shrink-0"> {{.CommentCount}}</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                            {{end}}
                        </ul>

                        <div class="px-6 py-4 border-t border-base-200 bg-base-50">
                            <div class="flex justify-center">
                                <div class="join">
                                    {{if ge .Page 2 }}
                                    <a href="/post?page={{.PrevPage}}{{if $.Filters}}&filters={{$.Filters}}{{end}}"
                                       aria-label="Previous">
                                        <button class="join-item btn btn-sm">«</button>
                                    </a>
                                    {{end}}
                                    {{ $NowPage := .Page }}
                                    {{range .Pagination}}
                                    <a href="/post?page={{.Page}}{{if $.Filters}}&filters={{$.Filters}}{{end}}">
                                        <button class="join-item btn btn-sm {{if eq $NowPage .Page}}btn-active{{end}}">
                                            {{.Page}}
                                        </button>
                                    </a>
                                    {{end}}
                                    {{if lt .Page .TotalPages}}
                                    <a href="/post?page={{.NextPage}}{{if .Filters}}&filters={{.Filters}}{{end}}"
                                       aria-label="Next">
                                        <button class="join-item btn btn-sm">»</button>
                                    </a>
                                    {{end}}
                                </div>
                            </div>
                            <div class="text-center mt-2 text-sm text-base-content/60">
                                第 {{ .Page }} 页，共 {{ .TotalPages }} 页
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <aside class="w-full md:w-80 flex-shrink-0">
                <div class="sticky top-24 space-y-4">
                    <div class="card bg-base-100 shadow-xl">
                        <div class="card-body">
                            <h2 class="card-title">小帖士</h2>
                            <p class="text-base-content/70">
                                在我的后园，可以看见墙外有两株树，一株是枣树，还有一株也是枣树。</p>
                        </div>
                    </div>
                    {{if .RecommendedArticles}}
                    <div class="card bg-base-100 shadow-xl">
                        <div class="card-body">
                            <h2 class="card-title">推荐文章</h2>
                            <div class="space-y-2">
                                <div class="text-sm text-base-content/60">本周最热门文章</div>
                                {{range .RecommendedArticles}}
                                <div class="space-y-1">
                                    <a href="/post/{{.Id}}" class="text-sm hover:text-primary cursor-pointer">
                                        • {{.Title}}
                                    </a>
                                </div>
                                {{end}}
                            </div>
                        </div>
                    </div>
                    {{end}}
                    <div class="card bg-base-100 shadow-xl">
                        <div class="card-body">
                            <h2 class="card-title">赞助商</h2>
                            <p class="text-base-content/70">感谢我们的赞助商支持，让论坛能够持续为大家提供优质服务。</p>
                            <div class="card-actions justify-end">
                                <a href="/sponsors">
                                    <button class="btn btn-primary btn-sm">了解更多</button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </aside>
        </div>
    </main>
    {{template "footer.gohtml" .}}
</div>
<script>
    const filterTags = document.querySelectorAll('.filter-tag');
    const allTag = document.querySelector('.filter-tag[data-filter="all"]');

    // 页面加载时根据URL参数设置初始状态
    document.addEventListener('DOMContentLoaded', function () {
        const urlParams = new URLSearchParams(window.location.search);
        const filters = urlParams.get('filters');

        if (filters) {
            const filterArray = filters.split('-');
            filterTags.forEach(tag => {
                if (filterArray.includes(tag.dataset.filter)) {
                    tag.classList.remove('btn-outline');
                    tag.classList.add('btn-primary');
                    tag.classList.add('active');
                    // 如果有其他标签被选中，取消"全部"的选中状态
                    if (tag.dataset.filter !== 'all') {
                        allTag.classList.remove('btn-primary');
                        allTag.classList.add('btn-outline');
                        allTag.classList.remove('active');
                    }
                }
            });
        }
    });

    filterTags.forEach(tag => {
        tag.addEventListener('click', function (event) {
            event.preventDefault();
            if (this.dataset.filter === 'all') {
                // 如果点击的是"全部"，则取消其他标签的选中状态
                filterTags.forEach(t => {
                    if (t !== this) {
                        t.classList.remove('btn-primary');
                        t.classList.add('btn-outline');
                        t.classList.remove('active');
                    }
                });
                this.classList.remove('btn-outline');
                this.classList.add('btn-primary');
                this.classList.add('active');
                updateUrlAndRefresh();
            } else {
                // 处理其他标签的选中状态
                if (this.classList.contains('active')) {
                    this.classList.remove('btn-primary');
                    this.classList.add('btn-outline');
                    this.classList.remove('active');
                } else {
                    this.classList.remove('btn-outline');
                    this.classList.add('btn-primary');
                    this.classList.add('active');
                }

                // 如果"全部"被选中，取消选中状态
                if (allTag.classList.contains('active')) {
                    allTag.classList.remove('btn-primary');
                    allTag.classList.add('btn-outline');
                    allTag.classList.remove('active');
                }

                // 如果没有任何标签被选中，则自动选中"全部"
                const anyActive = Array.from(filterTags).some(t => t.classList.contains('active') && t !== allTag);
                if (!anyActive) {
                    allTag.classList.remove('btn-outline');
                    allTag.classList.add('btn-primary');
                    allTag.classList.add('active');
                }
                updateUrlAndRefresh();
            }
        });
    });

    function updateUrlAndRefresh() {
        const selectedFilters = Array.from(filterTags)
            .filter(tag => tag.classList.contains('active') && tag.dataset.filter !== 'all')
            .map(tag => tag.dataset.filter);

        // 获取当前URL中的其他参数
        const urlParams = new URLSearchParams(window.location.search);

        // 更新或添加filters参数
        if (selectedFilters.length > 0) {
            urlParams.set('filters', selectedFilters.join('-'));
        } else {
            urlParams.delete('filters');
        }

        // 重置页码为1
        urlParams.delete('page');

        // 构建新的URL并刷新页面
        const baseUrl = window.location.pathname;
        window.location.href = baseUrl + (urlParams.toString() ? '?' + urlParams.toString() : '');
    }
</script>
</body>
</html>