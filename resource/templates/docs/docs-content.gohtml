<script>
    document.addEventListener('DOMContentLoaded', function () {
        const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
        const mobileSidebar = document.getElementById('docs-sidebar');
        const sidebarBackdrop = document.getElementById('sidebar-backdrop');
        const menuIcon = document.getElementById('menu-icon');
        const closeIcon = document.getElementById('close-icon');

        let isSidebarOpen = false;

        function toggleMobileSidebar() {
            isSidebarOpen = !isSidebarOpen;

            if (isSidebarOpen) {
                // ÊòæÁ§∫ÁßªÂä®Á´Ø‰æßËæπÊ†è
                mobileSidebar.classList.remove('-translate-x-full');
                mobileSidebar.classList.add('translate-x-0');

                // ÊòæÁ§∫ÈÅÆÁΩ©Â±Ç
                sidebarBackdrop.classList.remove('opacity-0', 'pointer-events-none');
                sidebarBackdrop.classList.add('opacity-100', 'pointer-events-auto');

                document.body.style.overflow = 'hidden';

                // ÂàáÊç¢ÂõæÊ†á
                menuIcon.classList.add('hidden');
                closeIcon.classList.remove('hidden');
            } else {
                // ÈöêËóèÁßªÂä®Á´Ø‰æßËæπÊ†è
                mobileSidebar.classList.remove('translate-x-0');
                mobileSidebar.classList.add('-translate-x-full');

                // ÈöêËóèÈÅÆÁΩ©Â±Ç
                sidebarBackdrop.classList.remove('opacity-100', 'pointer-events-auto');
                sidebarBackdrop.classList.add('opacity-0', 'pointer-events-none');

                document.body.style.overflow = '';

                // ÂàáÊç¢ÂõæÊ†á
                menuIcon.classList.remove('hidden');
                closeIcon.classList.add('hidden');
            }
        }

        // ÁßªÂä®Á´ØËèúÂçïÊåâÈíÆÁÇπÂáª‰∫ã‰ª∂
        if (mobileMenuToggle) {
            mobileMenuToggle.addEventListener('click', toggleMobileSidebar);
        }

        // ËÉåÊôØÈÅÆÁΩ©ÁÇπÂáª‰∫ã‰ª∂
        if (sidebarBackdrop) {
            sidebarBackdrop.addEventListener('click', function () {
                if (isSidebarOpen) {
                    toggleMobileSidebar();
                }
            });
        }

        // ESCÈîÆÂÖ≥Èó≠‰æßËæπÊ†è
        document.addEventListener('keydown', function (e) {
            if (e.key === 'Escape' && isSidebarOpen) {
                toggleMobileSidebar();
            }
        });

        // Á™óÂè£Â§ßÂ∞èÊîπÂèòÊó∂ÁöÑÂ§ÑÁêÜ
        window.addEventListener('resize', function () {
            if (window.innerWidth >= 768) { // mdÊñ≠ÁÇπ
                if (isSidebarOpen) {
                    toggleMobileSidebar();
                }
            }
        });

        // ‰æßËæπÊ†èÂÜÖÁöÑÈìæÊé•ÁÇπÂáªÂêéËá™Âä®ÂÖ≥Èó≠‰æßËæπÊ†èÔºà‰ªÖÁßªÂä®Á´ØÔºâ
        if (mobileSidebar) {
            const sidebarLinks = mobileSidebar.querySelectorAll('a');
            sidebarLinks.forEach(link => {
                link.addEventListener('click', function () {
                    if (isSidebarOpen && window.innerWidth < 768) {
                        setTimeout(() => {
                            toggleMobileSidebar();
                        }, 150); // Âª∂ËøüÂÖ≥Èó≠ÔºåËÆ©Áî®Êà∑ÁúãÂà∞ÁÇπÂáªÊïàÊûú
                    }
                });
            });
        }
    });
</script>
</body>
