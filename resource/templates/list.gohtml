        color: var(--primary-color-dark); /* ä½¿ç”¨ä¸»è¦é¢œè‰²çš„æ·±è‰²ç‰ˆæœ¬å˜é‡ */
        text-decoration: none;
        background-color: var(--hover-color); /* ä½¿ç”¨æ‚¬åœé¢œè‰²å˜é‡ */
        border-color: var(--color-border); /* ä½¿ç”¨è¾¹æ¡†é¢œè‰²å˜é‡ */
    }

    .page-link:focus {
        z-index: 3;
        outline: 0;
        box-shadow: 0 0 0 0.2rem rgba(var(--color-primary), 0.25); /* ä½¿ç”¨ä¸»è¦é¢œè‰²å˜é‡ */
    }

    .page-item.active .page-link {
        z-index: 3;
        color: white;
        background-color: var(--color-primary); /* ä½¿ç”¨ä¸»è¦é¢œè‰²å˜é‡ */
        border-color: var(--color-primary); /* ä½¿ç”¨ä¸»è¦é¢œè‰²å˜é‡ */
    }

    .page-item.disabled .page-link {
        color: var(--text-color-light); /* ä½¿ç”¨æ¬¡è¦æ–‡æœ¬é¢œè‰²å˜é‡ */
        pointer-events: none;
        cursor: auto;
        background-color: var(--card-bg); /* ä½¿ç”¨å¡ç‰‡èƒŒæ™¯é¢œè‰²å˜é‡ */
        border-color: var(--color-border); /* ä½¿ç”¨è¾¹æ¡†é¢œè‰²å˜é‡ */
    }

    /* å°å±å¹•é€‚é… */
    @media (max-width: 768px) {
